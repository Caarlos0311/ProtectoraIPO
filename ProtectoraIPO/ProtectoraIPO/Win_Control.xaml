<Window x:Class="ProtectoraIPO.Win_Control"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ProtectoraIPO="clr-namespace:ProtectoraIPO" xmlns:local="clr-namespace:ProtectoraIPO"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="ProtectoraIPO" Height="450" Width="800" WindowStartupLocation="CenterScreen" MinWidth="700" MinHeight="450" Closing="Window_Closing" Icon="Fotos/logoApp.png">

    <Grid Background="{DynamicResource fondoTerciarioOscuro}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>


        <Button x:Name="btn_ayuda_c" Grid.Column="0" HorizontalAlignment="Left" Margin="0" Grid.Row="2" VerticalAlignment="Center" Width="50" Height="50" Click="btn_ayuda_Click" Background="{x:Null}" BorderBrush="{x:Null}" Style="{DynamicResource ButtonP}">
            <Image Source="Fotos/ayuda2.png" Width="40" Height="40" ToolTip="Ayuda"/>
        </Button>
        <Button x:Name="btn_config_c" Grid.Column="2" HorizontalAlignment="Right" Margin="0" Grid.Row="2" VerticalAlignment="Center" Width="50" Height="50" Click="btn_config_Click" BorderBrush="{x:Null}" Background="{x:Null}" Style="{DynamicResource ButtonP}">
            <Image Source="Fotos/configuracion2.png" Width="40" Height="40" ToolTip="Configuración"/>
        </Button>
        <Button x:Name="btn_home" Grid.Column="2" HorizontalAlignment="Right" Margin="0" Grid.Row="0" VerticalAlignment="Center" Width="50" Height="50" Click="btn_home_Click" Background="{x:Null}" BorderBrush="{x:Null}" Style="{DynamicResource ButtonP}">
            <Image Source="Fotos/casa2.png" Width="32" Height="32" ToolTip="Cerrar Sesión"/>
        </Button>

        <Border x:Name="b_tabControl" Grid.Column="1" Grid.Row="1" CornerRadius="10" Padding="30" Background="{DynamicResource fondoTerciarioClaro}">
            <TabControl x:Name="tc_gestion" Style="{DynamicResource TabControlClaroStyle}">
                <TabItem x:Name="ti_perros" Header="Perros" Style="{DynamicResource TabItemClaroStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="60*"/>
                        </Grid.ColumnDefinitions>
                        <Grid x:Name="glb_perros">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="90*"/>
                            </Grid.RowDefinitions>
                            <StackPanel x:Name="sp_botones_pe" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,5">
                                <Button x:Name="btn_add_p" Click="mi_addPerros_Click" ToolTip="Añadir Perro" Style="{DynamicResource ButtonStyle}">
                                    <Image Source="Fotos/anadir2.png"  ToolTip="Añadir Perro" Style="{DynamicResource ImageStyle}"/>
                                </Button>
                                <Button x:Name="btn_udt_p" Click="mi_udtPerros_Click" ToolTip="Actualizar" Style="{DynamicResource ButtonStyle}">
                                    <Image Source="Fotos/actualizar2.png"  ToolTip="Actualizar Perro" Style="{DynamicResource ImageStyle}"/>
                                </Button>
                                <Button x:Name="btn_del_p" Click="mi_delPerros_Click" ToolTip="Borrar " Style="{DynamicResource ButtonStyle}">
                                    <Image Source="Fotos/borrar2.png" ToolTip="Borrar Perro" Style="{DynamicResource ImageStyle}"/>

                                </Button>
                            </StackPanel>
                            <ListBox x:Name="lb_perros" ItemsSource="{Binding}" SelectedIndex="0" SelectionChanged="lb_perros_SelectionChanged" Grid.Row="1" Style="{DynamicResource ListBoxStyle}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Width="40" Height="40" Source="{Binding Foto}"/>
                                            <TextBlock Text="{Binding Nombre}" VerticalAlignment="Center" Margin="10,0" Style="{DynamicResource TextBlockStyle}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                <ListBox.ContextMenu >
                                    <ContextMenu >
                                        <MenuItem x:Name="mi_addPerros" Header="Añadir Perro" Click="mi_addPerros_Click" Style="{DynamicResource MenuItemStyle}">
                                            <MenuItem.Icon>
                                                <Image Source="Fotos/anadir2.png" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem x:Name="mi_udtPerros" Header="Actualizar Perro" Click="mi_udtPerros_Click" Style="{DynamicResource MenuItemStyle}">
                                            <MenuItem.Icon>
                                                <Image Source="Fotos/actualizar2.png" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem x:Name="mi_delPerros" Header="Eliminar Perro" Click="mi_delPerros_Click" Style="{DynamicResource MenuItemStyle}">
                                            <MenuItem.Icon>
                                                <Image Source="Fotos/borrar2.png" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </ContextMenu>
                                </ListBox.ContextMenu>
                            </ListBox>
                        </Grid>

                        <GridSplitter x:Name="gs_perros" Grid.Column="1" Style="{DynamicResource GridSplitterStyle}"/>

                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="55*"/>
                                <RowDefinition Height="45*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50*"/>
                                <ColumnDefinition Width="50*"/>
                            </Grid.ColumnDefinitions>

                            <Grid x:Name="g_accion" Height="Auto" Grid.ColumnSpan="2" Visibility="Collapsed" Background="LightCoral">
                                <Label x:Name="lbl_accionRealizar_pe" HorizontalAlignment="Center" Content="Actualizar" FontWeight="Bold" VerticalAlignment="Center"  Style="{DynamicResource LabelStyle}"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button x:Name="btn_cancelar_p" Margin="5" Click="btn_cancelar_p_Click" Style="{DynamicResource ButtonStyle}" ToolTip="Cancelar">
                                        <Image Source="Fotos/cancelar.png" Style="{DynamicResource ImageStyle}"/>
                                    </Button>
                                    <Button x:Name="btn_aceptar_p" Margin="5" Click="btn_aceptar_p_Click" Style="{DynamicResource ButtonStyle}" ToolTip="Aceptar">
                                        <Image Source="Fotos/check.png" Style="{DynamicResource ImageStyle}"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                            <Image x:Name="img_foto_pe" Margin="20,20,20,0" Source="{Binding ElementName=lb_perros, Path=SelectedItem.Foto}" Grid.Row="1"/>
                            <Button x:Name="btn_cargarImg" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,35,5" IsEnabled="False" Grid.Row="1" Click="cargaImg_Click" ToolTip="Agregar imagen" Style="{DynamicResource ButtonStyle}">
                                <Image Source="Fotos/foto.png" ToolTip="Agregar imagen" Style="{DynamicResource ImageStyle}"/>
                            </Button>

                            <GroupBox Grid.Column="1" Header="Rasgos" Margin="10,10,10,0" Grid.Row="1" Style="{DynamicResource GroupBoxStyle}">
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="70*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <Label Content="Nombre: " HorizontalContentAlignment="Right" HorizontalAlignment="Right" Height="30" Margin="5,0,5,3" Style="{DynamicResource LabelStyle}"/>
                                                <Label Content="Sexo: " HorizontalContentAlignment="Right" HorizontalAlignment="Right" Height="30" Margin="5,0,5,3"  Style="{DynamicResource LabelStyle}"/>
                                                <Label Content="Edad (meses): " HorizontalContentAlignment="Right" HorizontalAlignment="Right" Height="30" Margin="5,0,5,3"  Style="{DynamicResource LabelStyle}"/>
                                                <Label Content="Peso (Kg): " HorizontalContentAlignment="Right" HorizontalAlignment="Right" Height="30" Margin="5,0,5,3"  Style="{DynamicResource LabelStyle}"/>
                                                <Label Content="Raza: "  HorizontalContentAlignment="Right" HorizontalAlignment="Right" Height="30" Margin="5,0,5,3"  Style="{DynamicResource LabelStyle}"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1">
                                                <Grid>
                                                    <Grid.ColumnDefinitions >
                                                        <ColumnDefinition Width="90*"/>
                                                        <ColumnDefinition Width="auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBox x:Name="txt_nombre_wc" Height="30" Margin="0,0,0,3" IsEnabled="False" Style="{DynamicResource TextBoxStyle}" KeyDown="txt_nombre_wc_KeyDown"/>
                                                    <Image x:Name="adv_nombre_p"  Width="30" Height="30" Visibility="Collapsed" Source="Fotos/aviso.png" Grid.Column="1" Margin="10,0,10,0" ToolTip="El nombre no puede estar vacío"  />
                                                </Grid>
                                                <Grid>
                                                    <Grid.ColumnDefinitions >
                                                        <ColumnDefinition Width="90*"/>
                                                        <ColumnDefinition Width="auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <ComboBox x:Name="cb_sexo_wc" Height="30" Margin="0,0,0,3" VerticalContentAlignment="Center" IsEnabled="False">
                                                        <ComboBoxItem Style="{DynamicResource ComboBoxItemStyle}">
                                                            <StackPanel Orientation="Horizontal">
                                                                <Image Source="Fotos/macho.png" Width="20" Height="20" Margin="2,0" ToolTip=""/>
                                                                <TextBlock Text="Macho" Margin="3,0" ToolTip="Macho" Style="{DynamicResource TextBlockStyle}"/>
                                                            </StackPanel>
                                                        </ComboBoxItem>
                                                        <ComboBoxItem Style="{DynamicResource ComboBoxItemStyle}">
                                                            <StackPanel Orientation="Horizontal">
                                                                <Image Source="Fotos/hembra.png" Width="22" Height="22"/>
                                                                <TextBlock Text="Hembra" Margin="5,0" ToolTip="Hembra" Style="{DynamicResource TextBlockStyle}"/>
                                                            </StackPanel>
                                                        </ComboBoxItem>
                                                    </ComboBox>
                                                    <Image x:Name="adv_sexo_p"  Width="30" Height="30" Visibility="Collapsed" Source="Fotos/aviso.png" Grid.Column="1" Margin="10,0,10,0"/>
                                                </Grid>
                                                <Grid>
                                                    <Grid.ColumnDefinitions >
                                                        <ColumnDefinition Width="90*"/>
                                                        <ColumnDefinition Width="auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBox x:Name="txt_edad_wc" Height="30" Margin="0,0,0,3" IsEnabled="False" PreviewTextInput="NumberValidationIntTextBox" Style="{DynamicResource TextBoxStyle}" KeyDown="txt_edad_wc_KeyDown"/>
                                                    <Image x:Name="adv_edad_p"  Width="30" Height="30" Visibility="Collapsed" Source="Fotos/aviso.png" Grid.Column="1" Margin="10,0,10,0" ToolTip="La edad no puede estar vacía"/>
                                                </Grid>
                                                <Grid>
                                                    <Grid.ColumnDefinitions >
                                                        <ColumnDefinition Width="90*"/>
                                                        <ColumnDefinition Width="auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBox x:Name="txt_peso_wc" Height="30" Margin="0,0,0,3" IsEnabled="False" PreviewTextInput="NumberValidationDoubleTextBox" Style="{DynamicResource TextBoxStyle}" KeyDown="txt_peso_wc_KeyDown"/>
                                                    <Image x:Name="adv_peso_p"  Width="30" Height="30" Visibility="Collapsed" Source="Fotos/aviso.png" Grid.Column="1" Margin="10,0,10,0" ToolTip="El peso no puede estar vacío"/>
                                                </Grid>
                                                <Grid>
                                                    <Grid.ColumnDefinitions >
                                                        <ColumnDefinition Width="90*"/>
                                                        <ColumnDefinition Width="auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBox x:Name="txt_raza_wc" Height="30" Margin="0,0,0,3" IsEnabled="False" Style="{DynamicResource TextBoxStyle}"/>
                                                    <Image x:Name="adv_raza_p"  Width="30" Height="30" Visibility="Collapsed" Source="Fotos/aviso.png" Grid.Column="1" Margin="10,0,10,0" ToolTip="La raza no puede estar vacía"/>
                                                </Grid>
                                            </StackPanel>
                                        </Grid>
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50*"/>
                                                <ColumnDefinition Width="50*"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <ProtectoraIPO:ToggleButton x:Name="tbtn_sociable_wc" Height="40" Width="40" HorizontalAlignment="Center" Margin="0,3" IsEnabled="False" MouseLeftButtonDown="tbtn_sociable_wc_MouseLeftButtonDown"/>
                                                <Label x:Name="lbl_sociable_p" Content="No Sociable" HorizontalAlignment="Center"  Style="{DynamicResource LabelStyle}"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1">
                                                <ProtectoraIPO:ToggleButton x:Name="tbtn_ppp_wc" Height="40" Width="40" HorizontalAlignment="Center" Margin="0,3" IsEnabled="False" MouseLeftButtonDown="tbtn_ppp_wc_MouseLeftButtonDown" ToolTip="Perro Potencialmente Peligroso"/>
                                                <Label x:Name="lbl_ppp_p" Content="No PPP" HorizontalAlignment="Center"  Style="{DynamicResource LabelStyle}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </ScrollViewer>
                            </GroupBox>
                            <ScrollViewer Grid.Row="2" Grid.ColumnSpan="2" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Margin="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Expander Grid.Row="0" Header="Detalles" Margin="10,15,10,10" Style="{DynamicResource ExpanderStyle}">
                                        <GroupBox Grid.Column="0" Margin="0,3,0,0" Style="{DynamicResource GroupBoxStyle}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="70*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="70*"/>
                                                </Grid.RowDefinitions>
                                                <Label Content="Descripción: " HorizontalContentAlignment="Right" HorizontalAlignment="Right" Height="30" Margin="5,3,5,3" VerticalAlignment="Top"  Style="{DynamicResource LabelStyle}"/>
                                                <TextBox Name="txt_descripcion_wc" Grid.Column="1" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,3,0,3" IsEnabled="False" Style="{DynamicResource TextBoxStyle}" KeyDown="txt_descripcion_wc_KeyDown"/>
                                                <StackPanel Grid.Column="0" Grid.Row="1">
                                                    <Label Content="Padrino: " HorizontalContentAlignment="Right" HorizontalAlignment="Right" Height="30" Margin="5,0,5,3"  Style="{DynamicResource LabelStyle}"/>
                                                    <Label Content="Chip: "  HorizontalContentAlignment="Right" HorizontalAlignment="Right" Height="30" Margin="5,0,5,3"  Style="{DynamicResource LabelStyle}"/>
                                                    <Label Content="Fecha entrada: "  HorizontalContentAlignment="Right" HorizontalAlignment="Right" Height="30" Margin="5,0,5,3"  Style="{DynamicResource LabelStyle}"/>
                                                    <Label Content="Estado: "  HorizontalContentAlignment="Right" HorizontalAlignment="Right" Height="35" Margin="5,0,5,3"  Style="{DynamicResource LabelStyle}"/>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1" Grid.Row="1">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="auto"/>
                                                            <ColumnDefinition Width="80*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                            <Button x:Name="btn_verPadrino" HorizontalAlignment="Left" Click="btn_verPadrino_Click" ToolTip="Ir a Padrino" Style="{DynamicResource ButtonStyle}">
                                                                <Image Source="Fotos/ver3.png" ToolTip="Ir a Padrino" Style="{DynamicResource ImageStyle}"/>
                                                            </Button>
                                                            <Button x:Name="btn_QuitarPadrino" Margin="5,3" HorizontalAlignment="Left" IsEnabled="False" Click="btn_QuitarPadrino_Click" Style="{DynamicResource ButtonStyle}" ToolTip="Borrar Padrino" >
                                                                <Image Source="Fotos/borrar2.png" Style="{DynamicResource ImageStyle}"/>
                                                            </Button>
                                                        </StackPanel>
                                                        <ComboBox x:Name="cb_padrinos_wc" Height="30" Margin="0,3,0,3" VerticalContentAlignment="Center" IsEnabled="False" Grid.Column="1">
                                                            <ComboBox.ItemTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <TextBlock Text="{Binding Nombre}" VerticalAlignment="Center" Margin="0" Style="{DynamicResource TextBlockStyle}"/>
                                                                        <TextBlock Text=" " VerticalAlignment="Center" Margin="0" Style="{DynamicResource TextBlockStyle}"/>
                                                                        <TextBlock Text="{Binding Apellidos}" VerticalAlignment="Center" Margin="0" Style="{DynamicResource TextBlockStyle}"/>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </ComboBox.ItemTemplate>
                                                        </ComboBox>
                                                    </Grid>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions >
                                                            <ColumnDefinition Width="90*"/>
                                                            <ColumnDefinition Width="auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBox x:Name="txt_chip_wc" Height="30" Margin="0,0,0,3" IsEnabled="False" Style="{DynamicResource TextBoxStyle}" KeyDown="txt_chip_wc_KeyDown"/>
                                                        <Image x:Name="adv_chip_p" Width="30" Height="30" Visibility="Collapsed" Source="Fotos/aviso.png" Grid.Column="1" Margin="10,0,10,0"/>
                                                    </Grid>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions >
                                                            <ColumnDefinition Width="90*"/>
                                                            <ColumnDefinition Width="auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <DatePicker x:Name="dp_fechaEntrada_wc" Height="30" Margin="0,0,0,3" IsEnabled="False" Style="{DynamicResource DatePickerStyle}"/>
                                                        <Image x:Name="adv_fecha_p" Width="30" Height="30" Visibility="Collapsed" Source="Fotos/aviso.png" Grid.Column="1" Margin="10,0,10,0" ToolTip="Debe de haber una fecha seleccionada"/>
                                                    </Grid>
                                                    <ComboBox x:Name="cb_estado_wc" Height="35" Margin="0,0,0,3" VerticalContentAlignment="Center" IsEnabled="False" >
                                                        <ComboBoxItem Style="{DynamicResource ComboBoxItemStyle}">
                                                            <StackPanel Orientation="Horizontal">
                                                                <Image Source="Fotos/adoptado.png" Width="30" Height="30" Margin="2,0" />
                                                                <TextBlock Text="Adoptado" Margin="3,0" VerticalAlignment="Center" Style="{DynamicResource TextBlockStyle}"/>
                                                            </StackPanel>
                                                        </ComboBoxItem >
                                                        <ComboBoxItem Style="{DynamicResource ComboBoxItemStyle}">
                                                            <StackPanel Orientation="Horizontal">
                                                                <Image Source="Fotos/cuarentena.png" Width="30" Height="30" Margin="2,0"/>
                                                                <TextBlock Text="Cuarentena" Margin="3,0" VerticalAlignment="Center" Style="{DynamicResource TextBlockStyle}"/>
                                                            </StackPanel>
                                                        </ComboBoxItem>
                                                        <ComboBoxItem Style="{DynamicResource ComboBoxItemStyle}">
                                                            <StackPanel Orientation="Horizontal">
                                                                <Image Source="Fotos/reservado.png" Width="30" Height="30" Margin="2,0" />
                                                                <TextBlock Text="Reservado" Margin="3,0" VerticalAlignment="Center" Style="{DynamicResource TextBlockStyle}"/>
                                                            </StackPanel>
                                                        </ComboBoxItem>
                                                        <ComboBoxItem Style="{DynamicResource ComboBoxItemStyle}">
                                                            <StackPanel Orientation="Horizontal">
                                                                <Image Source="Fotos/fallecido.png" Width="30" Height="30" Margin="2,0"/>
                                                                <TextBlock Text="Fallecido" Margin="3,0" VerticalAlignment="Center" Style="{DynamicResource TextBlockStyle}"/>
                                                            </StackPanel>
                                                        </ComboBoxItem>
                                                        <ComboBoxItem Style="{DynamicResource ComboBoxItemStyle}" ToolTip="No se aplica ninguno de los estados anteriores" >
                                                            <StackPanel Orientation="Horizontal">
                                                                <Image Source="Fotos/vacio.png" Width="30" Height="30" Margin="2,0"/>
                                                                <TextBlock Text="NA" Margin="3,0" VerticalAlignment="Center" Style="{DynamicResource TextBlockStyle}"/>
                                                            </StackPanel>
                                                        </ComboBoxItem>
                                                    </ComboBox>
                                                </StackPanel>
                                            </Grid>
                                        </GroupBox>
                                    </Expander>
                                    <Expander Grid.Row="1" Grid.Column="1" Header="Salud" Margin="10,15,10,10" Style="{DynamicResource ExpanderStyle}">
                                        <GroupBox Margin="0,3,0,0" Style="{DynamicResource GroupBoxStyle}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="50*"/>
                                                    <ColumnDefinition Width="50*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="50*"/>
                                                </Grid.RowDefinitions>
                                                <Grid Grid.ColumnSpan="2" Margin="0,3,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="50*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Label Content="Descripción de enfermedades: " HorizontalAlignment="Left" Height="30" Margin="5,3" VerticalAlignment="Top"  Style="{DynamicResource LabelStyle}"/>
                                                    <TextBox Name="txt_enfermedades" TextWrapping="Wrap" AcceptsReturn="True" Grid.Column="1" Grid.ColumnSpan="3" Margin="0,3,0,3" IsEnabled="False" Style="{DynamicResource TextBoxStyle}"/>

                                                </Grid>
                                                <StackPanel Grid.Row="1">
                                                    <ProtectoraIPO:ToggleButton x:Name="tbtn_vacunado_wc" Height="40" Width="40" HorizontalAlignment="Center" Margin="0,3" IsEnabled="False" MouseLeftButtonDown="tbtn_vacunado_wc_MouseLeftButtonDown"/>
                                                    <Label x:Name="lbl_vacunado_p" Content="No Vacunado" HorizontalAlignment="Center"  Style="{DynamicResource LabelStyle}"/>
                                                </StackPanel>
                                                <StackPanel Grid.Row="1" Grid.Column="1">
                                                    <ProtectoraIPO:ToggleButton x:Name="tbtn_esterilizado_wc" Height="40" Width="40" HorizontalAlignment="Center" Margin="0,3" IsEnabled="False" MouseLeftButtonDown="tbtn_esterilizado_wc_MouseLeftButtonDown"/>
                                                    <Label x:Name="lbl_esterilizado_p" Content="No Esterilizado" HorizontalAlignment="Center"  Style="{DynamicResource LabelStyle}"/>
                                                </StackPanel>
                                            </Grid>
                                        </GroupBox>
                                    </Expander>
                                </Grid>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem x:Name="ti_padrinos" Header="Padrinos" Style="{DynamicResource TabItemClaroStyle}" >
                    <Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="60*"/>
                            </Grid.ColumnDefinitions>
                            <Grid x:Name="glb_padrinos">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="90*"/>
                                </Grid.RowDefinitions>
                                <StackPanel x:Name="sp_botones_pa" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,5">
                                    <Button x:Name="btn_add_pa" Click="mi_addPadrinos_Click" Style="{DynamicResource ButtonStyle}" ToolTip="Añadir Padrino">
                                        <Image Source="Fotos/anadir2.png" ToolTip="Añadir Padrino" Style="{DynamicResource ImageStyle}"/>
                                    </Button>
                                    <Button x:Name="btn_udt_pa" Click="mi_udtPadrinos_Click" Style="{DynamicResource ButtonStyle}" ToolTip="Actualizar Padrino">
                                        <Image Source="Fotos/actualizar2.png"  Style="{DynamicResource ImageStyle}" ToolTip="Actualizar Padrino"/>
                                    </Button>
                                    <Button x:Name="btn_del_pa" Click="mi_delPadrinos_Click" Style="{DynamicResource ButtonStyle}" ToolTip="Borrar Padrino">
                                        <Image Source="Fotos/borrar2.png" ToolTip="Borrar Padrino" Style="{DynamicResource ImageStyle}"/>
                                    </Button>
                                </StackPanel>
                                <ListBox x:Name="lb_padrinos" Grid.Row="1" ItemsSource="{Binding}" SelectedIndex="0" SelectionChanged="lb_padrinos_SelectionChanged" Style="{DynamicResource ListBoxStyle}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Nombre}" VerticalAlignment="Center" Margin="0" Style="{DynamicResource TextBlockStyle}"/>
                                                <TextBlock Text=" " VerticalAlignment="Center" Margin="0" Style="{DynamicResource TextBlockStyle}"/>
                                                <TextBlock Text="{Binding Apellidos}" VerticalAlignment="Center" Margin="0" Style="{DynamicResource TextBlockStyle}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                    <ListBox.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem x:Name="mi_addPadrinos" Header="Añadir Padrino" Click="mi_addPadrinos_Click" Style="{DynamicResource MenuItemStyle}">
                                                <MenuItem.Icon>
                                                    <Image Source="Fotos/anadir2.png" />
                                                </MenuItem.Icon>
                                            </MenuItem>
                                            <MenuItem x:Name="mi_udtPadrinos" Header="Actualizar Padrino" Click="mi_udtPadrinos_Click" Style="{DynamicResource MenuItemStyle}">
                                                <MenuItem.Icon>
                                                    <Image Source="Fotos/actualizar2.png" />
                                                </MenuItem.Icon>
                                            </MenuItem>
                                            <MenuItem x:Name="mi_delPadrinos" Header="Eliminar Padrino" Click="mi_delPadrinos_Click" Style="{DynamicResource MenuItemStyle}">
                                                <MenuItem.Icon>
                                                    <Image Source="Fotos/borrar2.png" />
                                                </MenuItem.Icon>
                                            </MenuItem>
