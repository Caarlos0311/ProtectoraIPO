<UserControl x:Class="ProtectoraIPO.ToggleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProtectoraIPO"
             mc:Ignorable="d" 
             d:DesignHeight="450" HorizontalAlignment="Center" VerticalAlignment="Center" Width="753.5" MouseLeftButtonDown="UserControl_MouseLeftButtonDown">

    <Grid>
        <Viewbox Margin="0,-1">
            <Grid HorizontalAlignment="Left" Height="60" Margin="0" VerticalAlignment="Top" Width="100">
                <Rectangle x:Name="back" Fill="#FFA0A0A0" HorizontalAlignment="Left" Height="56" VerticalAlignment="Top" Width="96" Margin="2,2,0,0" RadiusX="29" RadiusY="29" MouseLeftButtonDown="back_MouseLeftButtonDown"/>
                <Ellipse x:Name="dot" Fill="White" HorizontalAlignment="Center" Height="50" VerticalAlignment="Center" Width="50" MouseLeftButtonDown="dot_MouseLeftButtonDown"/>
            </Grid>
        </Viewbox>


    </Grid>
</UserControl>
